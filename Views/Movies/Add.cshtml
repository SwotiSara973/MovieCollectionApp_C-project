@model Movie_Collection_App.Models.ViewModels.AddMovieViewModel

<h1>Add a New Movie</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Genre</label>
        <input type="text" class="form-control" asp-for="Genre" />
    </div>

    <div class="mt-3">
        <label class="form-label">Release Year</label>
        <input type="number" class="form-control" asp-for="ReleaseYear" />
    </div>

    <div class="mt-3">
        <label class="form-label">Director</label>
        <input type="text" class="form-control" asp-for="Director" />
    </div>

    <div class="mt-3">
        <label class="form-label">Rating</label>
        <input type="number" step="0.1" class="form-control" asp-for="Rating" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Movie</button>
</form>