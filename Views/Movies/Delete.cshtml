@* This tells the page which movie we are thinking about deleting *@
@model Movie_Collection_App.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@* This is a warning message so the user doesn't delete a movie by mistake *@
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        @* This section shows the movie details one last time so we know exactly what is being removed *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>

    @* This form sends the final "Delete" command to the Controller *@
    <form asp-action="Delete">
        @* We keep the ID hidden so the computer knows exactly which movie to erase from the database *@
        <input type="hidden" asp-for="Id" />

        @* This red button officially deletes the movie *@
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        @* This link lets us cancel and go back to the safety of the main list *@
        <a asp-action="Index">Back to List</a>
    </form>
</div>