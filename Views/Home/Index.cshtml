@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to Movie Collection App</h1>
    <p class="fs-5 text-muted">Your personal library for tracking your favorite films.</p>
    <hr class="w-50 mx-auto my-4" />

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg px-4">Go to Dashboard</a>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Browse Movies</a>
    </div>
</div>